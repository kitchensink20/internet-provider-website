<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quattrocento+Sans&display=swap" rel="stylesheet">
    <link href="/styles/basic-styles.css" rel="stylesheet">
    <link href="/styles/menu-styles.css" rel="stylesheet">
    <link href="/styles/create-styles.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <div class="dropdownMenu" id="adminMenu">
            <button class="dropdown-btn">Admin menu</button>
            <div class="dropdown-content">
              <a href="/admin-menu">View all tariffes</a>
              <a href="/admin-menu/users-view">View and edit users</a>
              <a href="/admin-menu/tariffes-view">View and edit tariffes</a>
              <a href="/admin-menu/my-active-tariffes">View my active tariffes</a>
              <a href="/admin-menu/top-up-balance">Top-up my balance</a>
            </div>
        </div>
        <span id="usernameHolder">Welcome, <%= user.username %>!</span>
        <span id="userBalanceHolder">Balance: <%= user.balance %></span>
        <form action="/logout?_method=DELETE" method="POST" id="logoutForm">
            <button id="logoutBtn" type="submit">log out</button>
        </form>
    </header>
    <section class="mainSect">
        <h2 id="mainSectText">Create tariff</h2>
        <form id="createTariffForm" class="createForm" method="post" action="/create-tariff">
            <label for="tariffTypesOptions" id="tariffTypesOptionsLabel">Choose the tariff's type:</label>
            <select id="tariffTypesOptions" name="type" required>
                <option value="Internet">Internet</option>
                <option value="TV">TV</option>
                <option value="Mobile connection">Mobile connection</option>
            </select>
            <br>
            <label for="nameInput" id="nameInputLabel">Enter the tariff's name:</label>
            <input type="text" id="nameInput" name="name" required>
            <br>
            <div id="descriptionBlock">
                <label for="descriptionInput" id="descriptionInputLabel">Describe the tariff:</label>
                <textarea id="descriptionInput" name="description" rows="5" required></textarea>
            </div>
            <label for="priceInput" id="priceInputLabel">Enter the tariff's price:</label>
            <input type="number" id="priceInput" name="price" min="100" max="1000" value="100" required>
            <br><br>
            <button type="submit" id="submitBtn">Create tariff</button>
            </form>
    </section>
    <footer>
        <span>&#169 2023 IP Dream, Inc.</span>
    </footer>
</body>
</html>