<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quattrocento+Sans&display=swap" rel="stylesheet">
    <link href="/styles/basic-styles.css" rel="stylesheet">
    <link href="/styles/menu-styles.css" rel="stylesheet">
    <link href="/styles/table-views-styles.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="dropdownMenu" id="adminMenu">
            <button class="dropdown-btn">Admin menu</button>
            <div class="dropdown-content">
              <a href="/admin-menu">View all tariffes</a>
              <a href="/admin-menu/users-view">View and add users</a>
              <a href="/admin-menu/my-active-tariffes">View my active tariffes</a>
              <a href="/admin-menu/top-up-balance">Top-up my balance</a>
            </div>
        </div>
        <span id="usernameHolder">Welcome, <%= user.username %>!</span>
        <span id="userBalanceHolder">Balance: <%= user.balance %></span>
        <form action="/logout?_method=DELETE" method="POST" id="logoutForm">
            <button id="logoutBtn" type="submit">log out</button>
        </form>
    </header>
    <section class="mainSect">
        <h2 id="mainSectHeaderText">List of tariffes</h2>
        <div class="tableDiv">
            <table id="tariffesTable">
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </table>
            <a href="/admin-menu/create-tariff"><button class="addBtn">Add new tariff</button></a>
        </div>
    </section>
    <footer>
        <span>&#169 2023 IP Dream, Inc.</span>
    </footer>

    <script src="/js/tariffes-manager.js"></script>
    <script src="/js/tariffes-table-script.js"></script>
</body>
</html>